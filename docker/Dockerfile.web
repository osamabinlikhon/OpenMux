FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY web/package*.json ./
COPY web/vite.config.ts ./
COPY web/tsconfig.json ./
COPY web/tsconfig.node.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY web/src ./src
COPY web/index.html ./

# Expose port
EXPOSE 5173

# Start dev server
CMD ["npm", "run", "dev"]
